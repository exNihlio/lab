FROM jenkins/jenkins:lts-jdk11

COPY --chown=jenkins:jenkins /data/disks/config/certs/live/jenkins.sami.dog/fullchain.pem /var/lib/jenkins/cert.pem

COPY --chown=jenkins:jenkins /data/disks/config/certs/live/jenkins.sami.dog/privkey.pem /var/lib/jenkins/key.pem

ENV JENKINS_OPTS --httpPort=-1 --httpsPort=-8443 --httpsCertificate=/var/lib/jenkinss/cert.pem --httpsPrivateKey=/var/lib/jenkinss/key.pem

EXPOSE 8443
